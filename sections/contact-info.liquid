    },
    {
      "type": "text",
      "id": "hours_wednesday",
      "label": "Wednesday",
      "default": "9:00 AM - 5:00 PM"
    },
    {
      "type": "text",
      "id": "hours_thursday",
      "label": "Thursday",
      "default": "9:00 AM - 5:00 PM"
    },
    {
      "type": "text",
