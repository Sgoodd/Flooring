  .value-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .value-card:hover {
    transform: translateY(-5px);
  }
  
  @media (max-width: 768px) {
    .value-card {
      margin-bottom: 1.5rem;
    }
  }
