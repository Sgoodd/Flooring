<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-600 bg-amber-100 rounded-full mb-4">
        {{ section.settings.subheading | default: 'Our Values' }}
      </span>
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        {{ section.settings.heading | default: 'What We Stand For' }}
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-amber-400 to-amber-300 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Value 1: Quality -->
      <div class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow duration-300">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Quality Craftsmanship</h3>
        <p class="text-gray-600">We use only the finest materials and employ skilled craftsmen to ensure every project meets our high standards of excellence.</p>
      </div>
      
      <!-- Value 2: Integrity -->
      <div class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow duration-300">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Honest & Transparent</h3>
        <p class="text-gray-600">We believe in clear communication, fair pricing, and complete transparency throughout every step of your project.</p>
      </div>
      
      <!-- Value 3: Customer Service -->
      <div class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow duration-300">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Exceptional Service</h3>
        <p class="text-gray-600">Your satisfaction is our top priority. We go above and beyond to ensure a smooth, stress-free experience from start to finish.</p>
      </div>
      
      <!-- Value 4: Innovation -->
      <div class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow duration-300">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Innovative Solutions</h3>
        <p class="text-gray-600">We stay ahead of industry trends and utilize the latest techniques to deliver cutting-edge flooring solutions for your space.</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Values",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Values"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What We Stand For"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Core Value"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description of the core value and what it means for our customers."
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "shield-check",
              "label": "Shield Check"
            },
            {
              "value": "lightning-bolt",
              "label": "Lightning Bolt"
            },
            {
              "value": "star",
              "label": "Star"
            }
          ],
          "default": "star"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Values",
      "category": "About",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "title": "Quality Craftsmanship",
