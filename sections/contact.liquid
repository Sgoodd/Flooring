    },
    {
      "type": "textarea",
      "id": "info_description",
      "label": "Info Description",
      "default": "Have questions about our services or ready to schedule a consultation? Reach out to us using the contact form or the information below."
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "(612) 458-8579"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "info@ssflooringtc.com"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Serving the entire Twin Cities Metro Area"
    },
    {
      "type": "header",
      "content": "Contact Form"
    },
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form Heading",
      "default": "Send Us a Message"
    }
  ],
  "presets": [
    {
      "name": "Contact Section",
      "category": "Contact"
    }
  ]
