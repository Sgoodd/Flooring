<div class="relative bg-gradient-to-b from-blue-900 to-blue-800 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10 bg-[url('{{ 'pattern.png' | asset_url }}')] bg-repeat"></div>
  
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -right-20 -top-20 w-64 h-64 bg-amber-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  </div>
  
  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
        <span class="block">Transform Your Space with</span>
        <span class="block bg-clip-text text-transparent bg-gradient-to-r from-amber-400 to-amber-300">
          Premium Flooring
        </span>
      </h1>
      
      <p class="mt-6 max-w-lg mx-auto text-xl text-blue-100">
        Expert installation of laminate, vinyl, hardwood, and tile flooring in the Twin Cities metro area.
      </p>
      
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
        <a href="/contact" class="px-8 py-4 border border-transparent text-base font-medium rounded-full text-blue-900 bg-amber-400 hover:bg-amber-300 md:py-4 md:text-lg md:px-10 transition-all duration-300 transform hover:scale-105">
          Get Your Free Estimate
        </a>
        <a href="#services" class="px-8 py-4 border border-transparent text-base font-medium rounded-full text-white bg-blue-700 hover:bg-blue-600 md:py-4 md:text-lg md:px-10 transition-all duration-300">
          View Our Services
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-16 grid grid-cols-2 gap-8 md:grid-cols-4">
        <div class="text-center">
          <div class="text-3xl font-bold text-amber-400">15+</div>
          <div class="mt-1 text-sm font-medium text-blue-200">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-amber-400">2,500+</div>
          <div class="mt-1 text-sm font-medium text-blue-200">Projects Completed</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-amber-400">100%</div>
          <div class="mt-1 text-sm font-medium text-blue-200">Satisfaction</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-amber-400">5.0</div>
          <div class="mt-1 text-sm font-medium text-blue-200">Star Rated</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
    <svg class="w-full h-16 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity="1" fill="currentColor"></path>
    </svg>
  </div>
</div>

