<section class="py-20 bg-gradient-to-br from-blue-900 to-blue-800 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-300 bg-amber-900 bg-opacity-50 rounded-full mb-4">
        {{ section.settings.subheading | default: 'Why Choose Us' }}
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {{ section.settings.heading | default: 'The S&S Flooring Difference' }}
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-amber-400 to-amber-300 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Benefit 1 -->
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-8 text-center hover:transform hover:scale-105 transition-all duration-300">
        <div class="w-16 h-16 bg-amber-400 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="h-8 w-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Quality Materials</h3>
        <p class="text-blue-100">We source only the highest quality materials from trusted manufacturers to ensure lasting beauty and durability.</p>
      </div>
      
      <!-- Benefit 2 -->
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-8 text-center hover:transform hover:scale-105 transition-all duration-300">
        <div class="w-16 h-16 bg-amber-400 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="h-8 w-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Expert Installation</h3>
        <p class="text-blue-100">Our certified installers have years of experience and take pride in their meticulous attention to detail.</p>
      </div>
      
      <!-- Benefit 3 -->
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-8 text-center hover:transform hover:scale-105 transition-all duration-300">
        <div class="w-16 h-16 bg-amber-400 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="h-8 w-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Affordable Pricing</h3>
        <p class="text-blue-100">We offer competitive pricing and flexible financing options to fit your budget without compromising on quality.</p>
      </div>
      
      <!-- Benefit 4 -->
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-8 text-center hover:transform hover:scale-105 transition-all duration-300">
        <div class="w-16 h-16 bg-amber-400 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="h-8 w-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Satisfaction Guaranteed</h3>
        <p class="text-blue-100">Your satisfaction is our top priority. We stand behind our work with comprehensive warranties.</p>
      </div>
    </div>
    
    <!-- Stats -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div class="p-6">
        <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">15+</div>
        <div class="text-sm font-medium text-blue-200 uppercase tracking-wider">Years Experience</div>
      </div>
      <div class="p-6">
        <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">2,500+</div>
        <div class="text-sm font-medium text-blue-200 uppercase tracking-wider">Projects Completed</div>
      </div>
      <div class="p-6">
        <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">100%</div>
        <div class="text-sm font-medium text-blue-200 uppercase tracking-wider">Satisfaction</div>
      </div>
      <div class="p-6">
        <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">5.0</div>
        <div class="text-sm font-medium text-blue-200 uppercase tracking-wider">Star Rated</div>
      </div>
    </div>
    
    <!-- CTA -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold mb-4">{{ section.settings.cta_heading | default: 'Ready to Start Your Project?' }}</h3>
      <p class="text-blue-100 max-w-2xl mx-auto mb-8">{{ section.settings.cta_text | default: 'Contact us today for a free, no-obligation consultation and estimate.' }}</p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="{{ section.settings.primary_button_link | default: '/contact' }}" class="px-8 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-blue-900 bg-amber-400 hover:bg-amber-300 transition-colors">
          {{ section.settings.primary_button_text | default: 'Get Your Free Estimate' }}
        </a>
        <a href="{{ section.settings.secondary_button_link | default: '/services' }}" class="px-8 py-3 border border-white text-base font-medium rounded-full shadow-sm text-white hover:bg-white hover:bg-opacity-10 transition-colors">
          {{ section.settings.secondary_button_text | default: 'View Our Services' }}
        </a>
      </div>
    </div>
  </div>
</section>

