      "default": "Get Your Free Estimate"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "(612) 458-8579"
    },
    {
      "type": "header",
      "content": "Trust Badges"
    },
    {
      "type": "text",
      "id": "trust_badge_1",
      "label": "Trust Badge 1",
      "default": "Free Estimates"
    },
    {
      "type": "text",
      "id": "trust_badge_2",
      "label": "Trust Badge 2",
      "default": "Licensed & Insured"
    },
    {
      "type": "text",
      "id": "trust_badge_3",
      "label": "Trust Badge 3",
      "default": "Serving Twin Cities"
    }
  ],
  "presets": [
    {
      "name": "CTA Section",
      "category": "Call to Action"
    }
  ]
}
{% endschema %}

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
