<section class="relative bg-gradient-to-r from-blue-900 to-blue-800 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[url('{{ 'texture.png' | asset_url }}')] bg-repeat"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -right-20 -top-20 w-64 h-64 bg-amber-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        {{ section.settings.heading | default: 'Ready to Transform Your Floors?' }}
      </h2>
      
      <p class="text-xl text-blue-100 max-w-3xl mx-auto mb-10">
        {{ section.settings.subheading | default: 'Get a free, no-obligation estimate for your next flooring project. Our experts are ready to help you choose the perfect flooring solution for your home or business.' }}
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="{{ section.settings.primary_button_link | default: '/contact' }}" class="px-8 py-4 border border-transparent text-base font-medium rounded-full text-blue-900 bg-amber-400 hover:bg-amber-300 md:py-4 md:text-lg md:px-10 transition-all duration-300 transform hover:scale-105">
          {{ section.settings.primary_button_text | default: 'Get Your Free Estimate' }}
        </a>
        
        <a href="tel:{{ section.settings.phone_number | default: '+16124588579' }}" class="px-8 py-4 border border-white text-base font-medium rounded-full text-white hover:bg-white hover:bg-opacity-10 md:py-4 md:text-lg md:px-10 transition-all duration-300 flex items-center justify-center">
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {{ section.settings.phone_number | default: '(612) 458-8579' }}
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-12 flex flex-wrap justify-center items-center gap-6 text-sm text-blue-200">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-amber-400 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          {{ section.settings.trust_badge_1 | default: 'Free Estimates' }}
        </div>
        <div class="h-4 w-px bg-blue-700"></div>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-amber-400 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          {{ section.settings.trust_badge_2 | default: 'Licensed & Insured' }}
        </div>
        <div class="h-4 w-px bg-blue-700"></div>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-amber-400 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          {{ section.settings.trust_badge_3 | default: 'Serving Twin Cities' }}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
    <svg class="w-full h-16 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity="1" fill="currentColor"></path>
    </svg>
  </div>
</section>

