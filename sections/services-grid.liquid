<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-600 bg-amber-100 rounded-full mb-4">
        {{ section.settings.subheading | default: 'What We Offer' }}
      </span>
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        {{ section.settings.heading | default: 'Our Flooring Services' }}
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-amber-400 to-amber-300 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300" {{ block.shopify_attributes }}>
          <div class="aspect-w-16 aspect-h-9">
            <img 
              src="{{ block.settings.image | img_url: '600x400', crop: 'center' }}" 
              alt="{{ block.settings.title }}" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600"
              height="400"
            >
          </div>
          <div class="p-6">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
              {{ block.settings.icon }}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{{ block.settings.title }}</h3>
            <p class="text-gray-600 mb-4">{{ block.settings.description }}</p>
            <ul class="space-y-2 mb-6">
              {% for i in (1..3) %}
                {% assign feature = 'feature_' | append: i %}
                {% if block.settings[feature] != blank %}
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {{ block.settings[feature] }}
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
            <a href="{{ block.settings.link }}" class="inline-flex items-center text-blue-600 font-medium group-hover:text-blue-800 transition-colors">
              Learn more
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

