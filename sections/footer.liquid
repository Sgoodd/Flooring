{% include 'business-info' %}

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- About Column -->
      <div>
        <h3 class="text-xl font-bold mb-4 text-amber-400">{{ business_info.name }}</h3>
        <p class="text-gray-400 mb-4">Professional flooring installation and renovation services in the Twin Cities metro area.</p>
        <div class="flex space-x-4">
          {% if business_info.facebook_url != blank %}
          <a href="{{ business_info.facebook_url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-400 transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
            </svg>
          </a>
          {% endif %}
          
          {% if business_info.instagram_url != blank %}
          <a href="{{ business_info.instagram_url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-400 transition-colors">
            <span class="sr-only">Instagram</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.153 3.51c.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zM12 7.5a4.5 4.5 0 100 9 4.5 4.5 0 000-9zm0 7.5a3 3 0 110-6 3 3 0 010 6zm9-9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" clip-rule="evenodd"></path>
            </svg>
          </a>
          {% endif %}
          
          {% if business_info.pinterest_url != blank %}
          <a href="{{ business_info.pinterest_url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-400 transition-colors">
            <span class="sr-only">Pinterest</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12.017 0C5.396 0 .029 5.37.029 11.991c0 5.25 3.438 9.66 8.205 11.215.6.113.82-.258.82-.578 0-.284-.01-1.04-.016-2.04-3.337.724-4.042-1.61-4.042-1.61-.546-1.386-1.333-1.755-1.333-1.755-1.09-.744.082-.73.082-.73 1.203.086 1.838 1.236 1.838 1.236 1.07 1.835 2.808 1.305 3.492.998.108-.775.42-1.305.763-1.605-2.665-.3-5.467-1.332-5.467-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.4 3-.405 1.02.005 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.605-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.644 24 17.214 24 11.99 24 5.37 18.627 0 12.017 0z"></path>
            </svg>
          </a>
          {% endif %}
          
          {% if business_info.houzz_url != blank %}
          <a href="{{ business_info.houzz_url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-400 transition-colors">
            <span class="sr-only">Houzz</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0C8.1 0 4.8 2.2 2.7 5.5h18.6C19.2 2.2 15.9 0 12 0zM2.7 18.5C4.8 21.8 8.2 24 12 24s7.2-2.2 9.3-5.5H2.7z"></path>
            </svg>
          </a>
          {% endif %}
          
          {% if business_info.google_business_url != blank %}
          <a href="{{ business_info.google_business_url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-amber-400 transition-colors">
            <span class="sr-only">Google Business</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22c-5.5 0-10-4.5-10-10S6.5 2 12 2s10 4.5 10 10-4.5 10-10 10z"/>
              <path d="M12 4c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm0 14c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6z"/>
              <path d="M12 8c-2.2 0-4 1.8-4 4s1.8 4 4 4 4-1.8 4-4-1.8-4-4-4z"/>
            </svg>
          </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-amber-400">Quick Links</h3>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-amber-400">Our Services</h3>
        <ul class="space-y-2">
          <li><a href="/services/laminate" class="text-gray-400 hover:text-white transition-colors">Laminate Flooring</a></li>
          <li><a href="/services/vinyl" class="text-gray-400 hover:text-white transition-colors">Luxury Vinyl Plank</a></li>
          <li><a href="/services/hardwood" class="text-gray-400 hover:text-white transition-colors">Hardwood Flooring</a></li>
          <li><a href="/services/tile" class="text-gray-400 hover:text-white transition-colors">Tile Installation</a></li>
          <li><a href="/services/refinishing" class="text-gray-400 hover:text-white transition-colors">Floor Refinishing</a></li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-amber-400">Contact Us</h3>
        <address class="not-italic space-y-2">
          <p class="flex items-start">
            <svg class="h-5 w-5 mr-2 text-amber-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-gray-400">{{ business_info.address }}, {{ business_info.city_state_zip }}</span>
          </p>
          <p class="flex items-center">
            <svg class="h-5 w-5 mr-2 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:{{ business_info.phone | replace: '(', '' | replace: ') ', '-' | replace: ' ', '-' | replace: '.', '' }}" class="text-gray-400 hover:text-white transition-colors">{{ business_info.phone }}</a>
          </p>
          <p class="flex items-center">
            <svg class="h-5 w-5 mr-2 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:{{ business_info.email }}" class="text-gray-400 hover:text-white transition-colors">{{ business_info.email }}</a>
          </p>
          <p class="flex items-center">
            <svg class="h-5 w-5 mr-2 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-400">{{ business_info.hours_weekdays }}<br>{{ business_info.hours_saturday }}<br>{{ business_info.hours_sunday }}</span>
          </p>
        </address>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ business_info.name }}. All rights reserved.</p>
      <div class="mt-2 space-x-4">
        <a href="/policies/privacy-policy" class="hover:text-amber-400 transition-colors">Privacy Policy</a>
        <span>•</span>
        <a href="/policies/terms-of-service" class="hover:text-amber-400 transition-colors">Terms of Service</a>
        <span>•</span>
        <a href="/sitemap.xml" class="hover:text-amber-400 transition-colors">Sitemap</a>
      </div>
    </div>
  </div>
</footer>
