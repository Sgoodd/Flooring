<!-- Main Navigation -->
<header class="sticky top-0 z-50 w-full bg-white shadow-md transition-all duration-300 {% if template == 'index' %}absolute bg-transparent shadow-none{% endif %}">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-black text-blue-900">S&S FLOORING</span>
          <span class="ml-2 px-2 py-1 bg-amber-500 text-xs font-bold text-white rounded">TWIN CITIES</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="text-gray-900 hover:text-amber-500 font-medium transition-colors">
            {{ link.title }}
          </a>
        {% endfor %}
        <a href="/contact" class="bg-blue-900 hover:bg-blue-800 text-white px-6 py-2 rounded-full font-medium transition-colors">
          Free Estimate
        </a>
      </nav>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-gray-900" data-mobile-menu-button aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!-- Menu icon -->
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu, show/hide based on menu state -->
  <div class="md:hidden hidden" data-mobile-menu>
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white shadow-lg">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">
          {{ link.title }}
        </a>
      {% endfor %}
      <a href="/contact" class="block w-full text-center bg-blue-900 text-white px-4 py-2 rounded-md font-medium hover:bg-blue-800">
        Free Estimate
      </a>
    </div>
  </div>
</header>
