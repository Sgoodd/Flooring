<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
      <!-- Image Column -->
      <div class="lg:col-span-6 mb-12 lg:mb-0 lg:pr-12">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <!-- Main Image -->
          <div class="aspect-w-16 aspect-h-9">
            {% if section.settings.image != blank %}
              {{ section.settings.image | image_url: width: 1200 | image_tag: 
                loading: 'lazy', 
                class: 'w-full h-full object-cover',
                alt: section.settings.image.alt | escape
              }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'w-full h-full bg-gray-200' }}
            {% endif %}
          </div>
          
          <!-- Experience Badge -->
          <div class="absolute -bottom-6 -right-6 bg-gradient-to-r from-amber-500 to-amber-600 text-white p-6 rounded-full shadow-lg">
            <div class="text-center">
              <span class="block text-3xl font-bold">15+</span>
              <span class="text-sm font-medium">Years Experience</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Content Column -->
      <div class="lg:col-span-6">
        <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-600 bg-amber-100 rounded-full mb-4">
          {{ section.settings.subheading | default: 'About Us' }}
        </span>
        
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {{ section.settings.heading | default: 'Your Trusted Flooring Experts in the Twin Cities' }}
        </h2>
        
        <div class="prose prose-lg text-gray-600 mb-8">
          {{ section.settings.content | default: '' }}
          
          <ul class="space-y-3 mt-6">
            {% for i in (1..4) %}
              {% assign feature_icon = 'feature_icon_' | append: i %}
              {% assign feature_text = 'feature_text_' | append: i %}
              {% if section.settings[feature_text] != blank %}
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-amber-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{{ section.settings[feature_text] }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        
        <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
          <a href="{{ section.settings.primary_button_link | default: '/about' }}" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-blue-900 hover:bg-blue-800 transition-colors">
            {{ section.settings.primary_button_text | default: 'Learn More About Us' }}
          </a>
          <a href="{{ section.settings.secondary_button_link | default: '/contact' }}" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-full shadow-sm text-gray-700 bg-white hover:bg-gray-50 transition-colors border-gray-300">
            {{ section.settings.secondary_button_text | default: 'Contact Us' }}
          </a>
        </div>
        
        <!-- Stats -->
        <div class="mt-12 grid grid-cols-2 gap-8">
          {% for i in (1..3) %}
            {% assign stat_number = 'stat_number_' | append: i %}
            {% assign stat_label = 'stat_label_' | append: i %}
            {% if section.settings[stat_number] != blank %}
              <div>
                <div class="text-3xl font-bold text-blue-900">{{ section.settings[stat_number] }}</div>
                <div class="text-sm font-medium text-gray-500">{{ section.settings[stat_label] }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

