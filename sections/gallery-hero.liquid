<section class="relative bg-gradient-to-r from-blue-900 to-blue-800 text-white py-20 md:py-28 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[url('{{ 'texture.png' | asset_url }}')] bg-repeat"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -right-20 -top-20 w-64 h-64 bg-amber-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-300 bg-amber-900 bg-opacity-50 rounded-full mb-4">
      {{ section.settings.subheading | default: 'Our Portfolio' }}
    </span>
    
    <h1 class="text-4xl md:text-5xl font-bold mb-6">
      {{ section.settings.heading | default: 'Our Flooring Projects' }}
    </h1>
    
    <p class="text-xl text-blue-100 max-w-3xl mx-auto mb-8">
      {{ section.settings.description | default: 'Browse through our collection of completed projects to see the quality and craftsmanship of our work. Each project showcases our attention to detail and commitment to excellence.' }}
    </p>
    
    <!-- Category Filter -->
    <div class="flex flex-wrap justify-center gap-2 mt-8">
      <button data-filter="all" class="px-4 py-2 text-sm font-medium rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 transition-colors active-filter">
        All Projects
      </button>
      <button data-filter="hardwood" class="px-4 py-2 text-sm font-medium rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 transition-colors">
        Hardwood
      </button>
      <button data-filter="luxury-vinyl" class="px-4 py-2 text-sm font-medium rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 transition-colors">
        Luxury Vinyl
      </button>
      <button data-filter="laminate" class="px-4 py-2 text-sm font-medium rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 transition-colors">
        Laminate
      </button>
      <button data-filter="tile" class="px-4 py-2 text-sm font-medium rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 transition-colors">
        Tile & Stone
      </button>
    </div>
  </div>
  
  <!-- Decorative Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
    <svg class="w-full h-16 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity="1" fill="currentColor"></path>
    </svg>
  </div>
</section>

{% schema %}
{
  "name": "Gallery Hero",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Portfolio"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Flooring Projects"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Browse through our collection of completed projects to see the quality and craftsmanship of our work. Each project showcases our attention to detail and commitment to excellence."
    },
    {
      "type": "header",
      "content": "Categories"
    },
    {
      "type": "text",
      "id": "category_all",
      "label": "All Projects Label",
      "default": "All Projects"
    },
    {
      "type": "text",
      "id": "category_hardwood",
      "label": "Hardwood Label",
      "default": "Hardwood"
    },
    {
      "type": "text",
      "id": "category_luxury_vinyl",
      "label": "Luxury Vinyl Label",
      "default": "Luxury Vinyl"
    },
    {
      "type": "text",
      "id": "category_laminate",
      "label": "Laminate Label",
      "default": "Laminate"
    },
    {
      "type": "text",
      "id": "category_tile",
      "label": "Tile & Stone Label",
      "default": "Tile & Stone"
    }
  ],
  "presets": [
    {
      "name": "Gallery Hero",
      "category": "Gallery"
    }
  ]
}
{% endschema %}

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob { animation: blob 7s infinite; }
  .animation-delay-2000 { animation-delay: 2s; }
  .active-filter { background-color: rgba(251, 191, 36, 0.2) !important; }
</style>
