<section class="relative bg-gradient-to-r from-blue-900 to-blue-800 text-white py-20 md:py-28 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[url('{{ 'texture.png' | asset_url }}')] bg-repeat"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -right-20 -top-20 w-64 h-64 bg-amber-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <span class="inline-block px-3 py-1 text-sm font-semibold text-amber-300 bg-amber-900 bg-opacity-50 rounded-full mb-4">
        {{ section.settings.subheading | default: 'Our Story' }}
      </span>
      
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        {{ section.settings.heading | default: 'Transforming Spaces with Quality Flooring' }}
      </h1>
      
      <div class="w-20 h-1 bg-gradient-to-r from-amber-400 to-amber-300 mx-auto my-6"></div>
      
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        {{ section.settings.description | default: 'With years of experience in the flooring industry, we are committed to delivering exceptional craftsmanship and outstanding customer service on every project.' }}
      </p>
    </div>
  </div>
  
  <!-- Stats Counter -->
  <div class="relative mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="py-4">
          <div class="text-4xl font-bold text-amber-400 mb-2">
            <span class="counter" data-target="15">0</span>+
          </div>
          <div class="text-sm uppercase tracking-wider text-blue-200">Years Experience</div>
        </div>
        <div class="py-4">
          <div class="text-4xl font-bold text-amber-400 mb-2">
            <span class="counter" data-target="500">0</span>+
          </div>
          <div class="text-sm uppercase tracking-wider text-blue-200">Projects Completed</div>
        </div>
        <div class="py-4">
          <div class="text-4xl font-bold text-amber-400 mb-2">
            <span class="counter" data-target="98">0</span>%
          </div>
          <div class="text-sm uppercase tracking-wider text-blue-200">Satisfaction Rate</div>
        </div>
        <div class="py-4">
          <div class="text-4xl font-bold text-amber-400 mb-2">
            <span class="counter" data-target="1000">0</span>+
          </div>
          <div class="text-sm uppercase tracking-wider text-blue-200">Happy Customers</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
    <svg class="w-full h-16 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity="1" fill="currentColor"></path>
    </svg>
  </div>
</section>

